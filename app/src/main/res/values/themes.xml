<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Atividade1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryVariant">@color/dark_color</item>
        <item name="colorOnPrimary">@color/light_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_color</item>
        <item name="colorSecondaryVariant">@color/pink_color</item>
        <item name="colorOnSecondary">@color/green_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Atividade1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Atividade1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Atividade1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>